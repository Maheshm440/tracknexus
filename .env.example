# ============================================================
# TrackNexus Web - Environment Variables Template
# ============================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================

# Database Configuration
# Development: PostgreSQL on localhost
# Production: Neon (https://neon.tech), Supabase, or Vercel Postgres
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/tracknexus?schema=public"

# Admin User Configuration
# SECURITY: Never commit real credentials to version control
ADMIN_EMAIL="admin@example.com"
ADMIN_NAME="Admin User"
# Generate hash: node -e "require('bcryptjs').hash('YourPassword', 10).then(h => console.log(h))"
ADMIN_PASSWORD_HASH=""

# JWT Configuration
# Generate secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_EXPIRE="7d"

# CSRF Secret (separate from JWT for defense-in-depth)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CSRF_SECRET=

# SMTP Configuration for Email Verification
# For Gmail: Enable 2FA then create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM_EMAIL="noreply@tracknexus.com"
SMTP_FROM_NAME="TrackNexus"

# OTP Configuration
OTP_EXPIRY_MINUTES="15"
OTP_MAX_ATTEMPTS="3"
OTP_LENGTH="6"

# Upstash Redis (for production rate limiting)
# Create free account at: https://console.upstash.com
# Required for rate limiting to persist across deployments
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# MaxMind GeoIP2 Web Service
# Sign up at: https://www.maxmind.com/en/geolite2/signup
MAXMIND_ACCOUNT_ID=""
MAXMIND_LICENSE_KEY=""

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: https://yourdomain.com
FRONTEND_URL="http://localhost:3000"

# Tracking Pixel IDs (optional)
NEXT_PUBLIC_GA4_ID=""
NEXT_PUBLIC_GOOGLE_ADS_ID=""
NEXT_PUBLIC_META_PIXEL_ID=""
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=""
NEXT_PUBLIC_TWITTER_PIXEL_ID=""

# Site Verification Codes (optional)
# Google Search Console: https://search.google.com/search-console
# Bing Webmaster: https://www.bing.com/webmasters
NEXT_PUBLIC_GOOGLE_VERIFICATION=""
NEXT_PUBLIC_BING_VERIFICATION=""
NEXT_PUBLIC_GTM_ID=""
NEXT_PUBLIC_FACEBOOK_VERIFICATION=""
NEXT_PUBLIC_LINKEDIN_VERIFICATION=""
NEXT_PUBLIC_TWITTER_SITE=""

# API URL for tracking (leave empty for relative URLs)
NEXT_PUBLIC_API_URL=""

# Environment
NODE_ENV="development"
